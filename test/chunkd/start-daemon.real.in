#!/bin/sh

if [ -f cld.pid ]
then
	echo "cld.pid file found.  daemon still running?"
	exit 1
fi
if [ -f chunkd.pid ]
then
	echo "chunkd.pid file found.  daemon still running?"
	exit 1
fi

@CLDC_CMD@ -d data/cld -P cld.pid -p auto --port-file=cld.port -E

../server/chunkd -C $top_srcdir/test/server-test.cfg -E $*

sleep 3

exit 0
